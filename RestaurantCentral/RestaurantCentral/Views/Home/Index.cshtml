@{
    ViewBag.Title = "Home Page";
}
<style type="text/css">
    div.box {
        /*background: #EEE;*/
        min-height: 100px;
        height: 100%;
        width: 100%;
    }

    div.div1 {
        /*background: #999;*/
        float: left;
        height: 100%;
        width: 49%;
        border: 0.5pt solid black;
        overflow: auto;
    }

    div.div2 {
        /*background: #666;*/
        float: right;
        /*height: 100%;*/
        min-height: 200px;
        max-height: 200px;
        width: 49%;
        border: 0.5pt solid black;
        overflow: auto;
    }

    div.clear {
        clear: both;
        height: 1px;
        overflow: hidden;
        font-size: 0pt;
        margin-top: -1px;
    }
</style>


<h2>@ViewBag.Message</h2>
<p>
    You are logged in as @User.Identity.Name
</p>


<p>
    <a href="http://www.asp.net/ajax/cdn">http://www.asp.net/ajax/cdn</a>
    <br />
    @Html.LinkSimple("http://www.asp.net/ajax/cdn", "CDN Resourses")
</p>
<!--
<div style="float: left;border:0.5pt solid green;width:49%;clear:left;">left</div>

<div style="float: right;border:0.5pt solid blue;width:49%;clear:right;">right</div>
-->
<div>
    <div id="latestReview">
        @Ajax.ActionLink("Click here to see the latest review.",
                     "LatestReview", new AjaxOptions()
                         {
                             UpdateTargetId = "latestReview",
                             //InsertionMode = InsertionMode.InsertAfter,
                             InsertionMode = InsertionMode.Replace,
                             HttpMethod = "GET",
                             LoadingElementId = "progress"
                         })
    </div>
</div>

<div class="box">
    <div class="div1">
        @using (Ajax.BeginForm("Search", "Home", new AjaxOptions()
        {
            HttpMethod = "GET",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "searchResults"
        }))
        {
            <input type="text" name="q" data-autocomplete="@Url.Action("QuickSearch", "Home")"/>
            <input type="submit" value="Search" />
        }
        <div id="searchResults"></div>
    </div>

    <!-- ==================== JQUERY TEMPLATES =================================== -->
    <div class="div2">
        <form method="get" action="@Url.Action("JsonSearch", "Home")" id="searchForm">
            <input type="text" name="q" data-autocomplete="@Url.Action("QuickSearch", "Home")" />
            <input type="submit" value="Search" />
        </form>
        <table>
            <thead>
                <th>Name
                </th>
                <th>Address
                </th>
            </thead>
            <tbody id="searchResultsJSON">
            </tbody>
        </table>

        <script id="searchTemplate" type="text/x-jquery-tmpl">
            <tr>
                <td>${Name}
                </td>
                <td>${City}, ${Country}            
                </td>
            </tr>
        </script>
    </div>
    <div class="clear" />
</div>



<div id="progress">
    <img src="@Url.Content("~/Content/images/ajax-loader.gif")"/>
</div>

@section Footer
{
    <p>This is the Footer</p>
}
