@model RestaurantCentral.Models.Review

<div class="review">
    <h4>@Model.Restaurant.Name</h4>
    
    @Html.Image(Model.Restaurant.ImageUrl, Model.Restaurant.Name) 
   

    <p>Rating: @Model.Rating</p>
    <p>Dining Date: @Html.DisplayFor(model=>model.DiningDate)</p>

    <p>
        @Model.Body
        <span class="right">
            @Html.ActionLink("Edit", "Edit","Review", new { id = Model.ID }, null)
        </span>
    </p>
    <p>Added: @Model.Created</p>
</div>