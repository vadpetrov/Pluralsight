@model TheWorld.ViewModels.ContactViewModel

@{
    ViewBag.Title = "Contact Page";
}
@section Scripts{
    <script type="text/javascript" src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">
        (function () {
            this.hideMessage = function () {                
                //$("#msg").css("display", "none");
                $("#msg").removeClass().addClass("hide-message");
                //$("#msg").attr("class", "hide-message");
            };
            return this;
        }());        
    </script>

}



<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Contact</h2>
        <form method="post">

            <div asp-validation-summery="ValidationSummary.ModelOnly"></div>

            @*<div class="form-group has-error has-feedback">*@
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Enter contact name here..." onmouseover="hideMessage();" />
                @*<span class="fa fa-warning form-control-feedback"></span>*@
                <span class="glyphicon form-control-feedback"></span>
                @*<span class="glyphicon glyphicon-remove form-control-feedback"></span>*@
                <span asp-validation-for="Name" class="text-muted"></span>                
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-muted"></span>
            </div>

            <div class="form-group">
                <label asp-for="Message">Message</label>
                <textarea cols="40" rows="4" asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-muted"></span>
            </div>
            <div class="form-group">
                <a asp-controller="app" asp-action="index" class="btn btn-warning">Cancel</a>
                <input type="submit" value="Send Message" class="btn btn-success" />
            </div>

            @if (ViewBag.Message != null)
            {
                <div id="msg" class="text-muted">@ViewBag.Message</div>
            }
        </form>
    </div>
</div>
