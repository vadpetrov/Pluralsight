@{
    ViewBag.Title = "Index";
}

<h2>STOP SPAMMING ME</h2>

@using (Html.BeginForm("Submit", "Unsubscribe", FormMethod.Post, new { id = "form1", autocomplete = "off" }))
{
    <fieldset>
        <label for="emailAddress">This is my email address:</label>
        <input id="emailAddress" name="emailAddress" type="text" />
        <br/>
        <label for="submit">Stop using it.</label>
        <br/>
        <button id="submit" class="btn btn-primary" type="submit" onclick="showSpinner()">Thanks</button>
    </fieldset>
}

@section Scripts
{
<script src="/Sixeyed.MessageQueue.Web/Scripts/spin.min.js"></script>

<script>
    function showSpinner() {
        var opts = {
            length: 20,
            width: 12, 
            radius: 30,
            speed: 0.6,
            trail: 28,
        };
        var target = document.getElementById('form1');
        var spinner = new Spinner(opts).spin(target);
    };
</script>
}

